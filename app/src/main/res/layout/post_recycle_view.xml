<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >
    <TextView
        android:id="@+id/txtViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:textColor="@color/purple_200"
        android:textSize="25sp"
        android:fontFamily="monospace"
        android:textAlignment="center"
        />
    <ImageView
        android:id="@+id/imageViewPost"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtViewTitle"

        />

    <TextView
        android:id="@+id/txtViewLikes"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/imageViewPost"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/white"
        android:layout_marginRight="10dp"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_marginBottom="40dp"
        />

    <ImageView
        android:id="@+id/imgViewLikeButton"
        android:layout_width="50dp"
        android:layout_height="55dp"
        app:layout_constraintRight_toLeftOf="@id/txtViewLikes"
        app:layout_constraintTop_toBottomOf="@id/imageViewPost"
        android:background="@color/black"
        />






</androidx.constraintlayout.widget.ConstraintLayout>